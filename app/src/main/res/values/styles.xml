<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Widget.SwipeTime style -->
    <style name="Widget.SwipeTime">
        <!-- Base widget style for all SwipeTime components -->
    </style>
    
    <!-- Base Widget style (required by Android) -->
    <style name="Widget">
        <!-- Base widget style -->
    </style>
    
    <!-- Base text styles with accessibility support -->
    <style name="TextAppearance.SwipeTime.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SwipeTime.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SwipeTime.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.SwipeTime.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.SwipeTime.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.SwipeTime.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.SwipeTime.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Widget.SwipeTime.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- FAB styles -->
    <style name="Widget.SwipeTime.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="tint">@android:color/white</item>
    </style>

    <!-- Chip styles for categories -->
    <style name="Widget.SwipeTime.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="chipCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:minHeight">@dimen/touch_target_min</item>
    </style>

    <!-- Navigation styles -->
    <style name="Widget.SwipeTime.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/TextAppearance.SwipeTime.Caption</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.SwipeTime.Caption</item>
        <item name="android:minHeight">@dimen/bottom_nav_height</item>
    </style>

    <!-- List item styles -->
    <style name="Widget.SwipeTime.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/touch_target_min</item>
    </style>

    <!-- Accessibility styles -->
    <style name="Widget.SwipeTime.AccessibleButton" parent="Widget.SwipeTime.Button">
        <item name="android:minHeight">@dimen/touch_target_recommended</item>
        <item name="android:minWidth">@dimen/touch_target_recommended</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!-- Large text styles for accessibility -->
    <style name="TextAppearance.SwipeTime.Large" parent="TextAppearance.SwipeTime.Body">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.SwipeTime.Large.Title" parent="TextAppearance.SwipeTime.Title">
        <item name="android:textSize">32sp</item>
    </style>
    
    <!-- High contrast styles -->
    <style name="Widget.SwipeTime.Button.HighContrast" parent="Widget.SwipeTime.Button">
        <item name="android:textColor">?attr/textPrimaryColor</item>
        <item name="strokeColor">?attr/textPrimaryColor</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Reduced motion styles -->
    <style name="Widget.SwipeTime.NoAnimation">
        <item name="android:animateLayoutChanges">false</item>
    </style>
</resources>
